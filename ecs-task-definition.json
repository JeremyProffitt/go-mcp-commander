{
  "family": "go-mcp-commander",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "go-mcp-commander",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.YOUR_REGION.amazonaws.com/go-mcp-commander:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "MCP_LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "MCP_BLOCKED_COMMANDS",
          "value": "rm -rf,mkfs,dd,shutdown,reboot,halt,poweroff"
        }
      ],
      "secrets": [
        {
          "name": "MCP_AUTH_TOKEN",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT_ID:secret:mcp/commander:MCP_AUTH_TOKEN::"
        },
        {
          "name": "MCP_ALLOWED_COMMANDS",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT_ID:secret:mcp/commander:MCP_ALLOWED_COMMANDS::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/go-mcp-commander",
          "awslogs-region": "YOUR_REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3000/health || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 5
      }
    }
  ],
  "tags": [
    {
      "key": "Application",
      "value": "go-mcp-commander"
    },
    {
      "key": "Environment",
      "value": "production"
    }
  ]
}
